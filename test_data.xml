<blurb>
    <pattern>
        <param name="funny"></param>
        <entry><embed category="abstraction" filter="Ucfirst"/> is the root of <embed
                category="abstraction"/>.</entry>
        <entry weight="20">A funny word is "<embed category="funnyword" filter="ucfirst"/>".</entry>
    </pattern>
    <namespace name="main">
        <category name="abstraction">
            <entry>love</entry>
            <entry>anger</entry>
            <entry>happiness</entry>
            <entry>faith</entry>
            <entry>despair</entry>
        </category>
        <category name="funnyword">
            <param name="funny" default="nipples"></param>
            <entry>weasel<echo param="funny"/></entry>
        </category>
    </namespace>
</blurb>
